#!/usr/bin/bash
export INCREMENTS=gene.increments.bed
export GENEBODIES=genebodies.tsv
export COUNTALL=countall.tsv

bedmap --bases-uniq $GENEBODIES $INCREMENTS > olSize.sum
paste $GENEBODIES olSize.sum > $COUNTALL

function getCounts {
 ~/bin/R/R-3.0.1/bin/R --no-save --args $INCREMENTS $COUNTFILE $BWPLUS $BWMINUS < getCounts.R
 bash bedmap-strand.bsh $GENEBODIES $COUNTFILE | sed s/^.*\|//g | sed "s/NAN/NA/g" > $COUNTFILE.sum 
 paste $COUNTALL $COUNTFILE.sum > tmp
 mv tmp $COUNTALL
 rm $COUNTFILE $COUNTFILE.sum
}


