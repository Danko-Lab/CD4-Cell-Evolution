## Make all transcripts file...
rm *.bed

## Protein coding genes.
hgsql hg19 -e "select chrom, txStart, txEnd, name2, exonCount, strand from refGene where chrom not like '%random%' and chrom not like '%hap%' INTO OUTFILE '/usr/projects/GROseq/xin_ac16/transcriptHMM/AnnotatePredictions/refseqGenes.bed'"
hgsql hg19 -e "select chrom, txStart, txEnd, name, exonCount, strand from knownGene where chrom not like '%random%' and chrom not like '%hap%' INTO OUTFILE '/usr/projects/GROseq/xin_ac16/transcriptHMM/AnnotatePredictions/ucscGenes.bed'"
hgsql hg19 -e "select chrom, txStart, txEnd, name2, exonCount, strand from ensGene where chrom not like '%random%' and chrom not like '%hap%' INTO OUTFILE '/usr/projects/GROseq/xin_ac16/transcriptHMM/AnnotatePredictions/ensGenes.bed'"

cat refseqGenes.bed > AllGeneAnnotations.bed
cat ucscGenes.bed  >> AllGeneAnnotations.bed
cat ensGenes.bed   >> AllGeneAnnotations.bed

