## Get the rnaGenes track, and liftOver to hg19 (no native hg19 as of 2/21/11).
hgsql hg18 -e "select chrom,chromStart,chromEnd,type,score,strand from rnaGene where name not like '%pseudo%' and type not like '%miRNA%' and chrom not like '%random%' and chrom not like '%hap%' INTO OUTFILE '/usr/projects/GROseq/xin_ac16/transcriptHMM/AnnotatePredictions/rnaGenes.hg18.bed'"
liftOver rnaGenes.hg18.bed /gbdb/hg18/liftOver/hg18ToHg19.over.chain.gz rnaGenes.hg19.bed rnaGenes.liftOver.UNMAPPED.bed
cat rnaGenes.hg19.bed > rnaGenes.bed
R --no-save < writeMirBase.R
cat hsa.mirbase16.hg19.bed >> rnaGenes.bed

## Get RMSK track...
hgsql hg19 -e "select genoName,genoStart,genoEnd,repClass from rmsk INTO OUTFILE '/usr/projects/GROseq/xin_ac16/transcriptHMM/AnnotatePredictions/rmsk.bed'"
